<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.capacitacion.gabriel.hilos.MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/btn_descargar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="descargarImagen"
        android:text="@string/textobtnDescargar"/>

    <TextView
        android:id="@+id/estatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_status"/>

    <ImageView
        android:id="@+id/img_descargar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"/>



</LinearLayout>
