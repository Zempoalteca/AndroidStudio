<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C5E1A5">

    <ImageView
        android:id="@+id/imagen_curso"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/contentDescripcion"/>

    <TextView
        android:id="@+id/nombre_curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagen_curso"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/nombre_instructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagen_curso"
        android:layout_below="@id/nombre_curso"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/precio_curso"
        android:layout_width="100dp"
        android:layout_height="40sp"
        android:layout_below="@id/nombre_instructor"
        android:layout_toEndOf="@id/imagen_curso"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/btn_quitar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/nombre_instructor"
        android:layout_toEndOf="@id/precio_curso"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/btn_quitar"/>

</RelativeLayout>