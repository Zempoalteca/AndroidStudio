<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.holamundo.MainActivity"
    android:orientation="vertical">

    <!-- Esto es un comentario -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_peso"
        android:id="@+id/et_peso" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/texto_altura"
        android:id="@+id/et_altura"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/texto_sexo"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/et_sexo"/>

    <!-- Etiquetas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_resultado"
        android:id="@+id/tv_resultado"/>

    <!-- Botones-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_IMC"
        android:background="@color/colorBoton"
        android:textColor="@color/colorLetraBoton"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:id="@+id/btn_calcular"/>

</LinearLayout>
